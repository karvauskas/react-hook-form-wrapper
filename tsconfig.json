{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "declaration": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "outDir": "dist/",
        "rootDir": "src/",
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
    },
    "include": [
        "src/"
    ]
}
