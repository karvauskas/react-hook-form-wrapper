{
    "name": "react-hook-form-wrapper",
    "version": "0.0.1",
    "description": "react hook form wrapper",
    "type": "module",
    "main": "./dist/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "default": "./dist/index.js"
        },
        "./styles.css": "./dist/styles.ts"
    },
    "scripts": {
        "build:types": "tsc --project tsconfig.json",
        "build:css": "postcss src/styles/styles.css -o dist/styles.css",
        "build:css:min": "MINIFY=1 postcss src/styles/styles.css -o dist/styles.min.css",
        "build:js": "vite build",
        "build": "npm run build:js && npm run build:types && npm run build:css && npm run build:css:min",
        "dev": "vite serve demo"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/karvauskas/react-hook-form-wrapper.git"
    },
    "keywords": [
        "react",
        "hook",
        "form",
        "wrapper"
    ],
    "author": "Tomas Karvauskas",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/karvauskas/react-hook-form-wrapper/issues"
    },
    "homepage": "https://github.com/karvauskas/react-hook-form-wrapper#readme",
    "peerDependencies": {
        "@hookform/resolvers": "^5.2.2",
        "lodash": "^4.17.23",
        "react": "^19.2.0",
        "react-datepicker": "^8.10.0",
        "react-dom": "^19.2.0",
        "react-hook-form": "^7.71.1",
        "react-select": "^5.10.2",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@types/lodash": "^4.17.23",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.2",
        "autoprefixer": "^10.4.24",
        "cssnano": "^7.1.2",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "postcss-import": "^16.1.1",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "tsdown": "^0.15.12",
        "typescript": "^5.9.3",
        "vite": "^7.3.1"
    }
}
